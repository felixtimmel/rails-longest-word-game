<h1>New game</h1>
<div id="letters">
  <%@letters.each do |letter| %>
    <p><%= letter %></p>
  <% end %>
</div>

<p>What is your longest word ?</p>
<div class="form">
  <form action="/score" method="post">
    <%= hidden_field_tag :letters, @letters.join %>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <input type="text" name="word" id="input">
    <input type="submit" value="Play!" id="submit">
  </form>
</div>

<%= link_to "New letters", letter_path %>

